{
  "name": "traefik-forward-auth-provider",
  "version": "0.0.1",
  "description": "Allows Traefik to forward authentication requests to a third-party OAuth provider",
  "bin": "./dist/cli.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "",
    "prestart": "npm run build",
    "prepublish": "npm run package",
    "start": "node ./dist/server.js",
    "test": "jest --coverage",
    "package": "npm run build && npm run test && cp package.json dist/"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.4",
    "cosmiconfig": "^6.0.0",
    "express": "^4.17.1",
    "moment": "^2.24.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.24",
    "@types/request": "^2.48.4",
    "jest": "^24.9.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.spec.ts"
  ]
  },
  "traefik-forward-auth-provider": {
    "authCookieName": "_traefik-forward-auth-provider-user",
    "csrfCookieName": "_traefik-forward-auth-provider-csrf",
    "port": 8080,
    "provider": "home-assistant",
    "providers": {
      "home-assistant": {
        "client_id": "http://localhost:8080",
        "url": "https://home-assistant.io"
      }
    },
    "secret": "sooper-dooper",
    "userBlacklist": [],
    "userWhitelist": []
  }
}
